{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/tauri-v2.0.0/crates/tauri-schema-generator/schemas/config.schema.json",
  "productName": "Wedding Planner",
  "version": "0.1.0",
  "identifier": "com.weddingplanner.app",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Wedding Planner",
        "width": 1000,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": true,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: https: data: blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "Â© 2025 Wedding Planner App",
    "shortDescription": "Luxurious wedding planning application",
    "longDescription": "A comprehensive and elegant wedding planning application that helps couples organize their perfect day with budget tracking, guest management, seating arrangements, wishlists, and media galleries.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "targets": ["app", "msi", "deb", "dmg"],
    "createUpdaterArtifacts": false,
    "publisher": "Wedding Planner Inc",
    "homepage": "https://weddingplanner.app",
    "license": "MIT",
    "licenseFile": "LICENSE"
  },
  "plugins": {}
}
